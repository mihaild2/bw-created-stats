{
  "manifest_version": 3,
  "name": "Browswave Created Stats",
  "version": "1.0",
  "description": "Activity filter and analytics tool for Browswave users.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://app.browswave.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
    "background": {
    "service_worker": "background.js"
  },
  "icons": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
  }
}